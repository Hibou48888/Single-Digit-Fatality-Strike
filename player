public class player
{
  float range;
  float playerX;
  float playerY;
  PImage frame;
  int health;
  
  player()
  {
    range = 300;
    playerX = width/2;
    playerY = height/2;
    frame = null;
    health = 10;
  }
  
  void render()
  {
    fill(255);
    frame = loadImage("player_stand.png");
    if(frame != null)
      image(frame, playerX, playerY, 100, 200);
    else
      rect(playerX, playerY, 50, 300);
      
  }
}
